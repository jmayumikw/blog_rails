<%= button_to 'About Page', about_path, method: :get %>
<%= button_to 'Articles listing', articles_path, method: :get %>
<%= button_to 'Categories listing', categories_path, method: :get %>
<%= button_to 'Bloggers Listing', users_path, method: :get %>
<% if logged_in? %>
  <% if current_user.admin? %>
    <%= button_to "Admin #{current_user.username}", user_path(current_user), method: :get %>
    <%= button_to 'Create new category', new_category_path, method: :get %>
  <% else %>
    <%= button_to current_user.username, user_path(current_user), method: :get %>
  <% end %>
  <%= button_to 'Create new article', new_article_path, method: :get %>
  <%= button_to 'Logout', logout_path, method: :delete %>
  <%= button_to 'Delete Profile', user_path(current_user), method: :delete, data: { confirm: "Are you sure?" } %>
<% else %>
  <%= button_to 'Log in', login_path, method: :get %>
  <%= button_to 'Sign up', signup_path, method: :get %>
<% end %>